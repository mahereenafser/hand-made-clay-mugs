---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Clay & Co. - Handmade Clay Mugs">
  <section class="py-20 bg-gradient-to-br from-amber-100 to-stone-200">
    <div class="text-center max-w-4xl mx-auto px-4">
      <h1 class="text-5xl font-bold text-stone-800 mb-6">
        Handcrafted with <span class="text-amber-600">Love</span>
      </h1>
      <p class="text-xl text-stone-600 mb-8">
        Unique clay mugs that bring warmth to your daily rituals
      </p>
      <a href="/services" class="bg-amber-600 text-white px-8 py-3 rounded-lg font-semibold">
        View Our Work
      </a>
    </div>
  </section>
</Layout>
